<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imagem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121b3e"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/main_Login_editEmail"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="293dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/main_edit_email_style_login"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#f4f4f4"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_logo"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/imageView_logo"
        app:layout_constraintTop_toBottomOf="@+id/imageView_logo" />

    <Button
        android:id="@+id/main_btnLogin"
        android:layout_width="243dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/main_btn_style_login"
        android:text="Sign in"
        android:textColor="#121b3e"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/main_Login_editSenha"
        app:layout_constraintTop_toBottomOf="@+id/main_EMS_Login" />

    <EditText
        android:id="@+id/main_Login_editSenha"
        android:layout_width="293dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/main_edit_senha_style_login"
        android:drawableLeft="@drawable/ic_lock_outline_senha_24dp"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#f4f4f4"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/main_Login_editEmail"
        app:layout_constraintTop_toBottomOf="@+id/main_Login_editEmail" />

    <TextView
        android:id="@+id/main_EMS_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Esqueci minha senha?"
        android:textColor="#C9FAFAFA"
        app:layout_constraintEnd_toEndOf="@+id/main_Login_editSenha"
        app:layout_constraintTop_toBottomOf="@+id/main_Login_editSenha" />

    <TextView
        android:id="@+id/main_Cadastro_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="NÃ£o tenho conta ? Registre-se"
        android:textColor="#C9FAFAFA"
        app:layout_constraintStart_toStartOf="@+id/main_btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/main_btnLogin" />

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="249dp"
        android:layout_height="235dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088"
        app:srcCompat="@drawable/logo2_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>