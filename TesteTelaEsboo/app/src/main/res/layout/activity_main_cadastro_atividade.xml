<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121b3e">

    <EditText
        android:id="@+id/cadastroAtividade_edtTitulo"
        android:layout_width="293dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/cadastroatividade_edts_text"
        android:ems="10"
        android:hint="Título"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#f4f4f4"
        android:textColorHint="#f4f4f4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <EditText
        android:id="@+id/cadastroAtividade_edtDataInicio"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/cadastroatividade_edts_text"
        android:ems="10"
        android:hint="Início"
        android:inputType="date"
        android:paddingLeft="10dp"
        android:textColor="#f4f4f4"
        android:textColorHint="#f4f4f4"
        app:layout_constraintEnd_toStartOf="@+id/cadastroAtividade_edtDataFim"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cadastroAtividade_edtTitulo"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/cadastroAtividade_edtHoraFim"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cadastroatividade_edts_text"
        android:ems="10"
        android:hint="Fim"
        android:inputType="time"
        android:paddingLeft="10dp"
        android:textColorHint="#f4f4f4"
        app:layout_constraintEnd_toEndOf="@+id/cadastroAtividade_edtDataFim"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cadastroAtividade_edtDataFim"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/cadastroAtividade_edtHoraInicio"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cadastroatividade_edts_text"
        android:ems="10"
        android:hint="Início"
        android:inputType="time"
        android:paddingLeft="10dp"
        android:textColorHint="#f4f4f4"
        app:layout_constraintEnd_toEndOf="@+id/cadastroAtividade_edtDataInicio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cadastroAtividade_edtDataInicio"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/cadastroAtividade_edtDataFim"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cadastroatividade_edts_text"
        android:ems="10"
        android:hint="Fim "
        android:inputType="date"
        android:paddingLeft="10dp"
        android:textColor="#f4f4f4"
        android:textColorHint="#f4f4f4"
        app:layout_constraintEnd_toEndOf="@+id/cadastroAtividade_edtTitulo"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Data:"
        android:textColor="#f4f4f4"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/cadastroAtividade_edtTitulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cadastroAtividade_edtTitulo"
        app:layout_constraintTop_toBottomOf="@+id/cadastroAtividade_edtTitulo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hora:"
        android:textColor="#f4f4f4"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/cadastroAtividade_edtTitulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cadastroAtividade_edtTitulo"
        app:layout_constraintTop_toBottomOf="@+id/cadastroAtividade_edtDataInicio" />

    <include
        android:id="@+id/cadastroAtividade_daypicker"
        layout="@layout/daypicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastroAtividade_edtHoraInicio"></include>
</androidx.constraintlayout.widget.ConstraintLayout>